<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnmetodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pantalla"
        android:text="Activar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLsnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activar Listener"
        app:layout_constraintEnd_toEndOf="@+id/btnmetodo"
        app:layout_constraintStart_toStartOf="@+id/btnmetodo"
        app:layout_constraintTop_toBottomOf="@+id/btnmetodo" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="salir"
        android:text="Salir"
        app:layout_constraintEnd_toEndOf="@+id/btnLsnt"
        app:layout_constraintStart_toStartOf="@+id/btnLsnt"
        app:layout_constraintTop_toBottomOf="@+id/btnLsnt" />
</androidx.constraintlayout.widget.ConstraintLayout>